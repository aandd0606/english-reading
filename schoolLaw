        let currentQuestionIndex = 0;
        let score = 0;
        let quizCompleted = false;

        const quizApp = document.getElementById('quiz-app');
        const resultsDiv = document.getElementById('results');
        const scoreDisplay = document.getElementById('score-display');
        const feedbackMessage = document.getElementById('feedback-message');
        const restartBtn = document.getElementById('restart-btn');

        function renderQuestion(index) {
            if (index >= quizData.questions.length) {
                showResults();
                return;
            }

            const q = quizData.questions[index];
            const qNum = index + 1;
            
            const questionHtml = `
                <div id="q-${index}" class="question-card">
                    <div class="text-sm font-semibold text-blue-600 mb-2">問題 ${qNum} / ${quizData.questions.length} (10 分)</div>
                    <p class="text-lg font-bold text-gray-800 mb-4">${q.question}</p>
                    <div class="space-y-2">
                        ${q.answerOptions.map((option, optIndex) => `
                            <button class="option-button" data-index="${optIndex}" data-q-index="${index}">${option.text}</button>
                        `).join('')}
                    </div>
                    <div id="rationale-${index}" class="hidden mt-4 p-3 rounded-md bg-gray-50 border border-gray-200 text-gray-700 text-sm">
                        <strong class="text-gray-800">提示：</strong> ${q.hint}
                    </div>
                </div>
            `;
            quizApp.innerHTML = questionHtml;
            
            // Re-attach event listeners after rendering
            document.querySelectorAll(`#q-${index} .option-button`).forEach(button => {
                button.addEventListener('click', handleAnswer);
            });
        }

        function handleAnswer(event) {
            if (quizCompleted) return;

            const selectedButton = event.target;
            const qIndex = parseInt(selectedButton.dataset.qIndex);
            const optIndex = parseInt(selectedButton.dataset.index);
            const question = quizData.questions[qIndex];
            const selectedOption = question.answerOptions[optIndex];
            const allButtons = document.querySelectorAll(`#q-${qIndex} .option-button`);
            const rationaleDiv = document.getElementById(`rationale-${qIndex}`);

            // Disable all buttons and show rationale
            allButtons.forEach(btn => {
                btn.classList.add('disabled');
                btn.removeEventListener('click', handleAnswer);
            });

            // Update button color and score
            if (selectedOption.isCorrect) {
                selectedButton.classList.add('correct');
                score += 10;
            } else {
                selectedButton.classList.add('incorrect');
                // Highlight the correct answer
                question.answerOptions.forEach((opt, index) => {
                    if (opt.isCorrect) {
                        document.querySelector(`#q-${qIndex} .option-button[data-index="${index}"]`).classList.add('correct');
                    }
                });
            }

            // Show Rationale/Hint
            rationaleDiv.innerHTML = `<strong class="text-gray-800">${selectedOption.isCorrect ? '✔ 正確解析' : '❌ 錯誤解析'}：</strong> ${selectedOption.rationale} <br><strong class="text-gray-800">提示：</strong> ${question.hint}`;
            rationaleDiv.classList.remove('hidden');

            // Add Next Button
            const nextButton = document.createElement('button');
            nextButton.textContent = (qIndex < quizData.questions.length - 1) ? '下一題' : '查看結果';
            nextButton.className = 'mt-4 bg-blue-500 text-white px-4 py-2 rounded-lg font-semibold hover:bg-blue-600 transition';
            nextButton.addEventListener('click', () => {
                currentQuestionIndex++;
                renderQuestion(currentQuestionIndex);
            });
            document.getElementById(`q-${qIndex}`).appendChild(nextButton);
        }

        function showResults() {
            quizCompleted = true;
            quizApp.classList.add('hidden');
            resultsDiv.classList.remove('hidden');
            
            scoreDisplay.textContent = `得分：${score} / 100`;

            if (score === 100) {
                feedbackMessage.textContent = '太棒了！您對校園法律風險有全面的了解！';
                scoreDisplay.classList.add('text-green-600');
            } else if (score >= 70) {
                feedbackMessage.textContent = '表現良好！對大部分觀念都掌握了，再複習一下錯題會更完美！';
                scoreDisplay.classList.add('text-yellow-600');
            } else {
                feedbackMessage.textContent = '需要加強！建議仔細閱讀文章，特別是法律行為的定義與實例。';
                scoreDisplay.classList.add('text-red-600');
            }
        }

        function restartQuiz() {
            currentQuestionIndex = 0;
            score = 0;
            quizCompleted = false;
            resultsDiv.classList.add('hidden');
            quizApp.classList.remove('hidden');
            scoreDisplay.classList.remove('text-green-600', 'text-yellow-600', 'text-red-600');
            renderQuestion(currentQuestionIndex);
        }

        restartBtn.addEventListener('click', restartQuiz);

        // Initial render
        renderQuestion(currentQuestionIndex);
    </script>

</body>
</html>
